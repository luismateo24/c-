@using ErosMarket.Shared.DTOs
@inject HttpClient Http

<div class="modal-overlay">
    <div class="modal-content glass">
        <h2>Crear Cuenta</h2>
        <EditForm Model="model" OnValidSubmit="HandleRegister">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>Nombre de Usuario</label>
                <InputText @bind-Value="model.Username" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <InputText type="email" @bind-Value="model.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <InputText type="password" @bind-Value="model.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label>URL Imagen Avatar</label>
                <InputText @bind-Value="model.Avatar" class="form-control" placeholder="Ej: https://..." />
            </div>
            @if (!string.IsNullOrEmpty(error))
            {
                <p class="error-text">@error</p>
            }
            <div class="modal-actions">
                <button type="submit" class="btn btn-primary">Registrarse</button>
                <button type="button" class="btn btn-outline" @onclick="OnClose">Cancelar</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSuccess { get; set; }

    RegisterDTO model = new();
    string error = "";

    async Task HandleRegister()
    {
        error = "";
        try
        {
            var res = await Http.PostAsJsonAsync("api/auth/register", model);
            if (res.IsSuccessStatusCode)
                await OnSuccess.InvokeAsync();
            else
            {
                var err = await res.Content.ReadFromJsonAsync<ErrorMessage>();
                error = err?.Message ?? "Error en el registro.";
            }
        }
        catch { error = "Error de conexión con el servidor."; }
    }

    record ErrorMessage(string Message);
}
